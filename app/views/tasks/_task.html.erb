<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Author:</strong>
    <%= task.author_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= task.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">State:</strong>
    <%= task.state %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Deadline:</strong>
    <%= task.deadline %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show", task, class: "btn-secondary" %>
    <%= link_to "Edit", edit_task_path(task), class: "btn-secondary" %>
    <hr class="mt-6">
  <% end %>
</div>
